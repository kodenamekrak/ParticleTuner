{
    "version": "2.0.0",
    "windows": {
        "options": {
            "shell": {
                "executable": "pwsh.exe",
                "args": [
                    "-NoProfile",
                    "-ExecutionPolicy",
                    "Bypass",
                    "-Command"
                ]
            }
        }
    },
    "linux": {
        "options": {
            "shell": {
                "executable": "/usr/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "osx": {
        "options": {
            "shell": {
                "executable": "/usr/local/bin/pwsh",
                "args": [
                    "-NoProfile",
                    "-Command"
                ]
            }
        }
    },
    "tasks": [
        {
            "label": "Build",
            "detail": "Builds the library",
            "type": "shell",
            "command": "qpm s build",
            "group": "build",
            "options": {
                "env": {}
            },
            "problemMatcher": []
        },
        {
            "label": "Build (Clean)",
            "detail": "Builds the library from a clean state",
            "type": "shell",
            "command": "qpm s clean",
            "group": "build",
            "options": {
                "env": {}
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild",
            "detail": "Builds the library from a clean state with cleared dependencies",
            "type": "shell",
            "command": "qpm s rebuild",
            "group": "build",
            "options": {
                "env": {}
            },
            "problemMatcher": []
        },
        {
            "label": "Copy",
            "detail": "Builds and copies the library to the Quest using ADB and force-quits Beat Saber",
            "type": "shell",
            "command": "qpm s copy",
            "group": "build",
            "options": {
                "env": {}
            }
        },
        {
            "label": "Start Logging",
            "detail": "Begin logging from the Quest to the console",
            "type": "shell",
            "command": "qpm s logcat",
        },
        {
            "label": "Start logging to file",
            "detail": "Begin logging from the Quest to the console and saving output to a file 'logcat.log'",
            "type": "shell",
            "command": "qpm s logcat -- --file",
        },
        {
            "label": "Build QMOD",
            "detail": "Builds a .qmod to be installed into BMBF or QuestPatcher",
            "type": "shell",
            "command": "qpm s qmod",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {}
            },
            "problemMatcher": []
        },
        {
            "label": "Build QMOD (Clean)",
            "detail": "Builds a .qmod from a clean state to be installed into BMBF or QuestPatcher",
            "type": "shell",
            "command": "qpm s clean-qmod",
            "args": [],
            "group": "build",
            "options": {
                "env": {}
            },
            "problemMatcher": []
        },
        {
            "label": "Rebuild QMOD",
            "detail": "Builds a .qmod from a cleaned state with cleared dependencies to be installed into BMBF or QuestPatcher",
            "type": "shell",
            "command": "qpm s rebuild-qmod",
            "args": [],
            "group": "build",
            "options": {
                "env": {}
            },
            "problemMatcher": []
        },
        {
            "label": "Restart Beat Saber",
            "detail": "Force-quits and restarts Beat Saber on the Quest",
            "type": "shell",
            "command": "qpm s restart",
            "problemMatcher": []
        },
        {
            "label": "Process Stack",
            "detail": "Processes a tombstone using the debug .so to find file locations",
            "type": "shell",
            "command": "qpm s stack",
            "problemMatcher": []
        },
        {
            "label": "Pull Tombstone",
            "detail": "Finds and pulls the most recent tombstone from your quest",
            "type": "shell",
            "command": "qpm s tomb",
            "problemMatcher": []
        },
        {
            "label": "Deep Clean",
            "detail": "Clears dependencies and cleans the build path",
            "type": "shell",
            "command": "qpm s deepclean",
            "problemMatcher": []
        }
    ]
}
